<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <EditText
        android:id="@+id/macAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="25dp"
        android:hint="Enter MAC Address"
        android:inputType="text"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/macAddressEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Connect via Bluetooth"/>

    <Button
        android:id="@+id/buttonLed01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonConnect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="LED 01"
        android:enabled="false"/>

    <Button
        android:id="@+id/buttonLed02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLed01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="LED 02"
        android:enabled="false"/>

    <Button
        android:id="@+id/buttonLed03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLed02"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="LED 03"
        android:enabled="false"/>

    <Button
        android:id="@+id/buttonLed04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLed03"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="LED 04"
        android:enabled="false"/>

    <Button
        android:id="@+id/buttonLed05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLed04"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="LED 05"
        android:enabled="false"/>

</RelativeLayout>
