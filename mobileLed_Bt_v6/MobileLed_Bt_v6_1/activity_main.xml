<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/macAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="25dp"
        android:hint="Enter MAC Address"
        android:inputType="text"
        android:gravity="center_horizontal"/>


    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/macAddressEditText"
        android:text="Connect to ESP32"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/buttonLed01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/buttonConnect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="LED Control" />

    <Button
        android:id="@+id/buttonMonitor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/buttonLed01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Switch Status" />

</RelativeLayout>
